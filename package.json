{
  "name": "typoa",
  "version": "1.0.0-alpha.56",
  "author": "Eywek <contact@eywek.fr>",
  "description": "Help you generate OpenAPI definitions via Typescript",
  "homepage": "https://github.com/Eywek/typoa#readme",
  "main": "build/index.js",
  "files": [
    "build/"
  ],
  "scripts": {
    "prepublishOnly": "yarn build",
    "prebuild": "rm -rf build",
    "build": "tsc --project ./tsconfig.build.json",
    "postbuild": "mkdir build/template/ && cp src/template/express.ts.hbs build/template/express.ts.hbs",
    "test": "bun test --coverage --coverage-reporter=text --coverage-reporter=lcov",
    "lint": "tslint --fix --project .",
    "lint:check": "tslint --project ."
  },
  "engines": {
    "node": ">=18.15.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/express": "^5.0.3",
    "@types/glob": "^7.1.3",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.3",
    "@types/yamljs": "^0.2.31",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "openapi-types": "^7.0.1",
    "supertest": "^7.1.4",
    "tslint": "^6.1.2",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "debug": "^4.2.0",
    "glob": "^7.1.6",
    "handlebars": "^4.7.6",
    "ts-morph": "^23.0.0",
    "yamljs": "^0.3.0"
  }
}
